<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0000000"
    android:clickable="false"
    android:focusable="false"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/library_loadingdialog_layout"
        android:layout_width="150dip"
        android:layout_height="180dip"
        android:background="@drawable/library_loading_box_background"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/library_loadingdialog_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/library_progress_bar_loading" />

        <TextView
            android:id="@+id/library_loadingdialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:text="正在载入……"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>